	<p>
	<strong>Oh snap!</strong>
	Change this and that and try again.
	</p>
</div>

<%= form_for(@message, remote: true, style: ".form-stacked") do |f| %>
	<div id="fields" style="padding: 5px">
		<%= f.text_area :body, cols: "0", rows: "0", style: "width: 100%; height: 300px; padding: 10px;" %>
		<div class="container" style="margin-top: 10px">
			<div class="row">
					<%= f.submit class: "btn large primary" %>
				</div>
			</div>
		</div>
	</div>
<% end %>

<div id="result" class="container">
	<div id="links" class="row" style="display: none">	
		<div class="input" style="padding-top: 100px; padding-bottom:100px">
			<h4 style="margin: 10px auto; text-align: center;"><%= t(:message_here_your_link) %></h4>
			<input id="stub_link" type="text" onfocus="this.select();" style="width: 100%; font-size: 2.2em" />
			<div style="margin: 20px">
				<input value="<%= t(:message_new) %>" class="btn large" type="button" style="width: 100%; margin: 0 auto;" onclick="location.href='<%= escape_javascript(APP_URL) %>'" />
			</div>
		</div>
	</div>
</div>